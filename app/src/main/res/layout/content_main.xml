<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:id="@+id/btn_chord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="72dp"
        android:background="@drawable/circle"
        android:foreground="@drawable/chord"
        android:text="@string/button_chord"
        android:textColor="#Fff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView2" />

    <Button
        android:id="@+id/btn_interval"
        android:layout_width="81dp"
        android:layout_height="77dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/circle"
        android:foreground="@drawable/ear2"
        android:text="@string/button_interval"
        android:textColor="#Fff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView4" />

    <Button
        android:id="@+id/btn_replication"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/circle"
        android:foreground="@drawable/microphone"
        android:text="@string/button_replication"
        android:textColor="#Fff"
        app:layout_constraintStart_toEndOf="@+id/btn_interval"
        app:layout_constraintTop_toBottomOf="@+id/btn_theory" />

    <Button
        android:id="@+id/btn_stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="116dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/circle"
        android:foreground="@drawable/stats"
        android:text="@string/button_stats"
        android:textColor="#Fff"
        app:layout_constraintStart_toEndOf="@+id/btn_chord"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/btn_theory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/circle"
        android:foreground="@drawable/book"
        android:textColor="#Fff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_comp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/circle"
        android:foreground="@drawable/comp"
        android:text="Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="158dp"
        android:layout_height="63dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="4dp"
        android:text="@string/ChordTraining_button_text"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_chord" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="187dp"
        android:layout_height="49dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:text="@string/IntervalTraining_button_text"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_interval" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="262dp"
        android:layout_height="62dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:text="@string/Repetition_button_text"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/btn_replication" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="90dp"
        android:layout_height="44dp"
        android:layout_marginStart="168dp"
        android:layout_marginTop="12dp"
        android:text="@string/TheoryButton_text"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_theory" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="121dp"
        android:layout_height="43dp"
        android:layout_marginStart="60dp"
        android:text="@string/statistics_button_text"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/btn_stats" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginStart="148dp"
        android:layout_marginTop="12dp"
        android:text="@string/btn_comp_text"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_comp" />


</android.support.constraint.ConstraintLayout>